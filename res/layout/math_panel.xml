<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:id="@+id/equation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textAppearance="@style/TextAppearanceExtraLarge"/>

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <Button android:id="@+id/button_ul"
            style="@style/digit_button_style"/>
    <Button android:id="@+id/button_ur"
            style="@style/digit_button_style"/>
  </LinearLayout>

  <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <Button android:id="@+id/button_ll"
            style="@style/digit_button_style"/>
    <Button android:id="@+id/button_lr"
            style="@style/digit_button_style"/>
  </LinearLayout>
</merge>
