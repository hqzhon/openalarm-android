<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.startsmall.openalarm"
          android:versionName="20100202-bugfixes"
          android:versionCode="20100204">
  <uses-sdk android:minSdkVersion="3"/>

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.WRITE_SETTINGS" />
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.WRITE_APN_SETTINGS"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>
  <uses-permission android:name="android.permission.CALL_PHONE"/>

  <application android:label="@string/app_name"
               android:icon="@drawable/open_alarm_logo" android:debuggable="true">
    <provider android:name=".AlarmProvider"
              android:authorities="org.startsmall.openalarm" />

    <activity android:name=".OpenAlarm"
              android:label="@string/app_name"
              android:configChanges="orientation|keyboardHidden|keyboard|navigation">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".AlarmSettings"
              android:theme="@android:style/Theme.NoTitleBar"
              android:label="@string/app_name"
              android:configChanges="orientation|keyboardHidden|keyboard|navigation">
    </activity>

    <activity android:name=".FireAlarm"
              android:launchMode="singleInstance"
              android:theme="@android:style/Theme.Dialog"
              android:configChanges="orientation|keyboardHidden|keyboard|navigation">
    </activity>

    <receiver android:name=".AlarmHandler"
              android:label="@string/alarm_handler"
              android:icon="@drawable/alarm_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".BootReceiver"
              android:label="OpenAlarm">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
        <action android:name="android.intent.action.TIME_SET"/>
        <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
      </intent-filter>
    </receiver>

    <service android:name=".BootService"/>

    <receiver android:name=".ScheduleAlarmReceiver"
              android:label="OpenAlarm">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.SCHEDULE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
        <data android:mimeType="vnd.android.cursor.item/vnd.startsmall.alarms"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".WifiHandler"
              android:label="@string/wifi_handler"
              android:icon="@drawable/wifi_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".WifiStatusChangedReceiver">
      <intent-filter>
        <action android:name="android.net.wifi.WIFI_STATE_CHANGE"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".AirplaneModeHandler"
              android:label="@string/airplane_mode"
              android:icon="@drawable/airplanemode_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".ApnHandler"
              android:label="@string/apn_handler"
              android:icon="@drawable/apn_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

    <service android:exported="true" android:name=".ApnService"/>

    <receiver android:name=".CallForMeHandler"
              android:label="@string/callforme_handler"
              android:icon="@drawable/callforme_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.action.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

    <!-- The application's publisher ID assigned by AdMob -->
    <meta-data android:value="a14b5bc24b5db07" android:name="ADMOB_PUBLISHER_ID" />
  </application>

  <!-- AdMob Permissions -->
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>
