<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.startsmall.openalarm"
          android:versionCode="1"
          android:versionName="1.0.0">
  <uses-sdk android:minSdkVersion="3"/>

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.WRITE_SETTINGS" />
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

  <application android:label="@string/app_name"
               android:icon="@drawable/open_alarm_logo" android:debuggable="true">
    <provider android:name=".AlarmProvider"
              android:authorities="org.startsmall.openalarm" />

    <activity android:name=".OpenAlarm"
              android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".ApplicationSettings"
              android:theme="@android:style/Theme.NoTitleBar"
              android:label="@string/app_name">
    </activity>

    <activity android:name=".AlarmSettings"
              android:theme="@android:style/Theme.NoTitleBar"
              android:label="@string/app_name">
    </activity>

    <activity android:name=".FireAlarm"
              android:launchMode="singleTop"
              android:theme="@android:style/Theme.Dialog">
    </activity>

    <receiver android:name=".BootReceiver"
              android:label="OpenAlarm">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
        <action android:name="android.intent.action.TIME_SET"/>
        <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".AlarmHandler"
              android:label="Alarm"
              android:icon="@drawable/alarm_handler">
      <intent-filter>
        <action android:name="org.startsmall.openalarm.HANDLE_ALARM"/>
        <category android:name="android.intent.category.ALTERNATIVE"/>
      </intent-filter>
    </receiver>

  </application>
</manifest>
