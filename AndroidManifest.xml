<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.startsmall.alarmclockplus"
      android:versionCode="1"
      android:versionName="1.0">

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.WRITE_SETTINGS" />
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

  <application android:label="@string/app_name">
      <provider android:name="AlarmProvider"
                android:authorities="org.startsmall.alarmclockplus" />

      <activity android:name=".AlarmClockPlus"
                android:theme="@android:style/Theme"
                android:label="@string/app_name">
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>

      <activity android:name=".preference.AlarmSettings"
                android:theme="@android:style/Theme.NoTitleBar"
                android:label="@string/app_name">
      </activity>

      <receiver android:name=".receiver.InitReceiver"
                android:label="Alarm">
        <intent-filter>
          <action android:name="android.intent.action.BOOT_COMPLETED" />
          <action android:name="android.intent.action.TIME_SET"/>
          <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
        </intent-filter>
      </receiver>

      <receiver android:name=".receiver.ActionDispatcher"
                android:label="Alarm Dispatcher">
        <intent-filter>
          <action android:name="org.startsmall.alarmclockplus.DISPATCH_ACTION" />
          <category android:name="android.intent.category.ALTERNATIVE" />
        </intent-filter>
      </receiver>



      <receiver android:name=".receiver.AlarmReceiver"
                android:label="Alarm">
        <intent-filter>
          <action android:name="org.startsmall.alarmclockplus.ALARM_ACTION" />
          <category android:name="android.intent.category.ALTERNATIVE" />
        </intent-filter>
      </receiver>

      <receiver android:name=".receiver.WifiOnReceiver"
                android:label="Turn Wi-Fi On">
        <intent-filter>
          <action android:name="org.startsmall.alarmclockplus.ALARM_ACTION" />
          <category android:name="android.intent.category.ALTERNATIVE" />
        </intent-filter>
      </receiver>

      <receiver android:name=".receiver.WifiOffReceiver"
                android:label="Turn Wi-Fi Off">
        <intent-filter>
          <action android:name="org.startsmall.alarmclockplus.ALARM_ACTION" />
          <category android:name="android.intent.category.ALTERNATIVE" />
        </intent-filter>
      </receiver>

  </application>
</manifest>
